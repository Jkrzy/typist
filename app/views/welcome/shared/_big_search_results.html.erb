<% if @hits.length == 0 && (@search.to_s != '') %>
<h2 class='text-center'>No matches found.</h2>
<% else %>
<ul class='list-unstyled'>
  <% @hits.each do |hit| %>
    <li>
      <%= link_to(information_type_path(hit.id)) do %>
        <h2><%= hit.type_code %> <small><%= hit.name %></small></h2>
      <% end %>
      <div>
        <strong><%= "%s - %s" % [hit.type_code, hit.name] %></strong> = <em>
          {(confidentiality, <%= impact_level_text(hit.confidentiality_impact_level) %>),
          (integrity, <%= impact_level_text(hit.integrity_impact_level) %>),
          (availability, <%= impact_level_text(hit.availability_impact_level) %>)}
        </em>
      </div>
    </li>
  <% end %>
</ul>
<% end %>
